<Window x:Class="RadioCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioCS"
        mc:Ignorable="d"
        Title="RadioCS" Height="450" Width="800">
    <Grid Background="#FF222222">
        <Button x:Name="button" Content="Play" HorizontalAlignment="Center" Margin="0,293,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.507,0.628" Click="Button_Click" Background="#FF384F62" BorderBrush="#FF384F62" Foreground="#FFCDD1C1"/>
        <TextBlock x:Name="songName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Text="Song" FontSize="24" Margin="0,185,0,0" Foreground="#FF787878"/>
        <TextBlock x:Name="artistName" HorizontalAlignment="Center" Margin="0,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Artist" FontSize="16" Foreground="#FF787878"/>
        <TextBlock HorizontalAlignment="Left" Margin="395,251,0,0" TextWrapping="Wrap" Text="/" VerticalAlignment="Top" Foreground="#FF5F5F5F"/>
        <TextBlock x:Name="currTime" HorizontalAlignment="Left" Margin="362,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="00:00" Foreground="#FF5F5F5F"/>
        <TextBlock x:Name="endTime" HorizontalAlignment="Left" Margin="405,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="00:00" Foreground="#FF5F5F5F"/>
        <Slider x:Name="volume" HorizontalAlignment="Left" Margin="733,161,0,0" VerticalAlignment="Top" Width="18" Orientation="Vertical" Height="124" ValueChanged="volume_ValueChanged" Maximum="1" LargeChange="0.1" SmallChange="0.01"/>
        <Label Content="Volume" HorizontalAlignment="Left" Margin="717,290,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF787878"/>
    </Grid>
</Window>
